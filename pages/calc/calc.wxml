<!--Calc.html-->
<view class="calc_window">
  <view class="selection">
    <view class="selection_title">请选择卡片</view>
    <picker bindchange="bindPicker1" value="{{index_1}}" range="{{cards_1}}" range-key="card_name">
      <view class="picker">
        第一张卡：{{cards_1[index_1].card_name}}
      </view>
    </picker>
    <picker bindchange="bindPicker2" value="{{index_2}}" range="{{cards_2}}" range-key="card_name">
      <view class="picker">
        第二张卡：{{cards_2[index_2].card_name}}
      </view>
    </picker>
    <picker bindchange="bindPicker3" value="{{index_3}}" range="{{cards_3}}" range-key="card_name">
      <view class="picker">
        第三张卡：{{cards_3[index_3].card_name}}
      </view>
    </picker>
    <picker bindchange="bindPicker4" value="{{index_4}}" range="{{cards_4}}" range-key="card_name">
      <view class="picker">
        第四张卡：{{cards_4[index_4].card_name}}
      </view>
    </picker>
  </view>
</view>